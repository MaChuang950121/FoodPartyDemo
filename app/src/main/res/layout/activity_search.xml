<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_arrow_left_default"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/search_back"
        />
    <EditText
        android:id="@+id/edt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/search_back"
        android:layout_marginLeft="5dp"

        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_home_search"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/im_search"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_delete_default"
        android:layout_toLeftOf="@+id/im_search"
        android:layout_centerVertical="true"
        android:id="@+id/im_delete"
        />
</RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sc_scrollView"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="最近搜过"
            android:id="@+id/recent_search"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_search"
            android:layout_below="@+id/recent_search"
            ></android.support.v7.widget.RecyclerView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_all"
            android:src="@mipmap/ic_photo_delete"
            android:layout_below="@id/rv_search"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_delete_all"
            android:text="清空历史记录"
            android:layout_toRightOf="@id/delete_all"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            />
    </RelativeLayout>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/they_search"
            android:text="大家都在搜"
            android:layout_centerVertical="true"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_everyone_search"
                ></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_nutrition_order"
        ></android.support.v7.widget.RecyclerView>

</LinearLayout>